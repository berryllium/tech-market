<div class="form col-md-6 col-12">
  <form action="?page=categories&act=add" method="post" enctype="multipart/form-data">
    <input type="text" name="name" id="name" placeholder="Категория" required>
    <input type="text" name="title" id="title" placeholder="Описание">
    <input type="file" name="img" id="img" accept="image/jpeg,image/png,image/gif">
    <input type="submit" value="Добавить категорию">
  </form>
</div>
<table class="col-12">
  <tr>
    <th>id</th>
    <th>Фото</th>
    <th>Категория</th>
    <th>Удалить</th>
  </tr>
  {% if categories is empty %}
  <h3 class="col-12">добавьте товары</h3>
  {% else %}
  {% for category in categories %}
      <tr>
          <td> {{ category.id }} </td>
          <td><img src="../db/images/category/{{category.id}}/{{category.img}}" alt=""></td>
        <td>
          <form action="?page=categories&act=update&id={{category.id}}" method="post" enctype="multipart/form-data">
            <input type="text" name="name" value="{{ category.name }}">
            <input type="text" name="title" value="{{ category.title }}">
            <input hidden type="text" name="id" value="{{ category.id }}">
            <input type="file" name="img" id="img" accept="image/jpeg,image/png,image/gif">
            {% for spec in specifications %}
            <table>
            <tr>
              <td><input type="text" name="spec_prop[]" placeholder="Параметр" value="{{spec.prop}}" required></td>
              <td><input type="text" name="spec_val[]" placeholder="Значение" value="{{spec.value}}" required></td>
              <input type="hidden" name="id_spec[]" value="{{spec.id}}">
            </tr>
            {% endfor %}
            <tr id="add-tr">
              <td colspan="2" class="text-center"><button id="addspec" class="btn btn-warning m-auto">Добавить
                  характеристику</button></td>
            </tr>
          </table>
            <input type="submit" value="Изменить">
          </form>
        <td> <a class="delete-link" href="?page=categories&act=del&id={{ category.id }}">&times;</a></td>
      </tr>
      {% endfor %}
      {% endif %}
</table>