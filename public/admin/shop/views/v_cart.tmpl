<div class="cart-wrap">
  {% for product in cart %}
    <div class="cart-item">
      <img src="{{product.path_small}}" alt="{{product.title}}">
      <div class="name">{{product.title}}</div>
      <div class="count">{{product.count}}</div>
      <a href="#" class="button" onclick="rem(event)" data-id="{{product.id}}">&times;</a>
    </div>
  {% endfor %}
  <br>

</div>
<a href="#" data-login="{{login}}" onclick="order(event)" class="button" id="order">Оформить</a>
<script>
  function rem(event) {
    id = event.target.dataset.id
    $.post("", {
        id: id,
        act: 'del'
      })
      .done(function(data) {
        alert('товар удален' + id);
        alert(data);
      });
  }

